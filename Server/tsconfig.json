{
    "compilerOptions": {
      "target": "ES2020",                    // Allows optional chaining, modern features
      "module": "commonjs",                  // For Node.js require/module.exports
      "rootDir": ".",                        // Your source folder
      "outDir": "dist",                      // Where compiled JS goes
      "strict": true,                        // Enable all strict type-checking options
      "esModuleInterop": true,               // Allow default imports from CJS modules
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,                  // Speeds up compilation
      "resolveJsonModule": true,             // Allow importing JSON
      "moduleResolution": "node",            // Helps resolve node_modules
      "types": ["node", "express"],
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts"
    ]
  }