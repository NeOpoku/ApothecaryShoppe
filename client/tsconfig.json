{
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "enableResourceInlining": true,
    "strictInjectionParameters": true
  },
  "include": [
    "**/*.ts",
    "**/*.html",
    "**/*.css"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}